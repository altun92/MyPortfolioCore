@model List<MyPortfolioCore.DAL.Entities.Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Mesajlar</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Gelen Mesajlar</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Ana siteden gelen mesajları aşağıda ki panelden okuyabilirsiniz:
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Gönderen</th>
										<th scope="col">Konu</th>
										<th scope="col">Email</th>
										<th scope="col">Gönderim Tarihi</th>
										<th scope="col">Durum</th>
										<th scope="col">İşlemler</th>
									</tr>
								</thead>
								@foreach (var item in Model)
								{
									<tbody>
										<tr>
											<td>@item.MessageId</td>
											<td>@item.NameSurname</td>
											<td>@item.Subject</td>
											<td>@item.Email</td>
											<td>@item.SendDate.ToShortDateString()</td>
											<td>@if (item.IsRead==true)
												{
												<td><a href="/Message/ChangeIsReadToFalse/@item.MessageId" class="btn btn-danger">Okunmadı Olarak İşaretle</a></td>
												}
												else
												{
												<td><a href="/Message/ChangeIsReadToTrue/@item.MessageId" class="btn btn-success">Okundu Olarak İşaretle</a></td>
												}
											</td>
											<td>
												<a href="/Message/MessageDetail/@item.MessageId" class="btn btn-primary">Mesajı Oku</a>
												<a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-warning">Sil</a>
											</td>
										</tr>
									</tbody>
								}
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

