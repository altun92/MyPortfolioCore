@model MyPortfolioCore.DAL.Entities.Experience
@{
	ViewData["Title"] = "CreateExperience";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Deneyim Ekle</div>
						</div>
						<div class="card-body">
							<form method="post">
								<label>Firma Bilgisi</label><br />
								<input type="text" name="Head" class="form-control" />
								<br />
								<label>Çalışılan Pozisyon</label><br />
								<input type="text" name="Title" class="form-control" />
								<br />
								<label>Tarih Aralığı</label><br />
								<input type="text" name="Date" class="form-control" />
								<br />
								<label>Açıklama</label><br />
								<textarea rows="4" class="form-control" name="Description"></textarea>
								<br />
								<button class="btn btn-primary">Deneyim Ekle</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

