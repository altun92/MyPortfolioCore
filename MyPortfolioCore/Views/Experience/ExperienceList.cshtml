@model List<MyPortfolioCore.DAL.Entities.Experience>
@{
	ViewData["Title"] = "ExperienceList";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Deneyim Listesi</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Deneyimler ile ilgili işlemleri aşağıda ki panelden yapabilirsiniz:
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Ana Başlık</th>
										<th scope="col">Başlık</th>
										<th scope="col">Tarih</th>
										<th scope="col">Açıklama</th>
										<th scope="col">İşlemler</th>
									</tr>
								</thead>
								@foreach (var item in Model)
								{
									<tbody>
										<tr>
											<td>@item.ExperienceId</td>
											<td>@item.Head</td>
											<td>@item.Title</td>
											<td>@item.Date</td>
											<td>@item.Description</td>
											<td>
												<a href="" class="btn btn-success">Güncelle</a>
												<a href="" class="btn btn-warning">Sil</a>
											</td>
										</tr>
									</tbody>
								}
							</table>
							<br />
							<a href="" class="btn btn-primary btn-round">Yeni Deneyim Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>