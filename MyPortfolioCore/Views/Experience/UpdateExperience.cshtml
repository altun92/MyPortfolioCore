@model MyPortfolioCore.DAL.Entities.Experience
@{
	ViewData["Title"] = "UpdateExperience";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyimler</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Deneyim Güncelleme</div>
						</div>
						<div class="card-body">
							<form method="post">
								@Html.HiddenFor(x=>x.ExperienceId)
								<label>Firma Bilgisi</label>
								@Html.TextBoxFor(x=>x.Head, new {@class = "form-control"})
								<br />

								<label>Çalışılan Pozisyon</label>
								@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })s
								<br />

								<label>Tarih Aralığı</label>
								@Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
								<br />

								<label>Açıklama</label>
								@Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows="4" })
								<br />
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

