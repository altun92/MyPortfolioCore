@model MyPortfolioCore.DAL.Entities.ToDoList
@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Yapılacaklar</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Yapılacak İş Ekleme</div>
						</div>
						<div class="card-body">
							<form method="post">
								<label>İş Detayları</label><br />
								<input type="text" name="Title" class="form-control" />
								<br />
								<label>Görsel Linki</label><br />
								<input type="text" name="ImageUrl" class="form-control" />
								<br />
								<button class="btn btn-primary">Yeni Yapılacak İş Ekle</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

