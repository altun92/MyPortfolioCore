@model List<MyPortfolioCore.DAL.Entities.ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Yapılacaklar</h4>
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yapılacaklar Listesi</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Yapılacaklar ile ilgili işlemleri aşağıda ki panelden görüntüleyebilirsiniz:
							</div>
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Başlık</th>
										<th scope="col">Resim Url</th>
										<th scope="col">Oluşturma Tarihi</th>
										<th scope="col">Durum</th>
										<th scope="col">İşlemler</th>
									</tr>
								</thead>
								@foreach (var item in Model)
								{
									<tbody>
										<tr>
											<td>@item.ToDoListId</td>
											<td>@item.Title</td>
											<td>@item.ImageUrl</td>
											<td>@item.Date.ToShortDateString()</td>
											<td>@if (item.Status==true)
												{
													<a href="/ToDoList/ChangeIsWorkToFalse/@item.ToDoListId" class="btn btn-danger">Yapılmadı Olarak İşaretle</a>
												}
												else
												{
													<a href="/ToDoList/ChangeIsWorkToTrue/@item.ToDoListId" class="btn btn-success">Yapıldı Olarak İşaretle</a>
												}
											</td>
											<td>
												<a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Güncelle</a>
												<a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-warning">Sil</a>
											</td>
										</tr>
									</tbody>
								}
							</table>
							<a href="/ToDoList/CreateToDoList" class="btn btn-primary btn-round">Yeni İş Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

